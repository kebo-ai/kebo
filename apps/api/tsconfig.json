{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist/types",
    "paths": {
      "@/*": ["./src/*"],
      "@kebo/shared": ["../../packages/shared/src"],
      "@kebo/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
