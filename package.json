{
  "name": "kebo",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run turbo dev",
    "build": "bun run turbo build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "mobile": "bun run --cwd apps/mobile",
    "dashboard": "bun run --cwd apps/dashboard",
    "marketing": "bun run --cwd apps/marketing",
    "api": "bun run --cwd apps/api",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:status": "supabase status",
    "supabase:reset": "supabase db reset",
    "supabase:migrate": "supabase migration up",
    "supabase:diff": "supabase db diff",
    "supabase:push": "supabase db push",
    "db:seed": "bun run --cwd apps/api db:seed",
    "tools": "bun run --cwd apps/tools"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "turbo": "^2.3.3",
    "typescript": "^5.3.3"
  },
  "packageManager": "bun@1.1.38"
}
